{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="m-5">
    {{#with main}}
    <main>
        <section>
            {{>title data="Work in history" big=true}}
            <div>
                <ul>
                    {{#each works}}

                    <div>{{position}}</div>

                    <br>

                    <div>
                        {{duration.from}} -
                        {{#if duration.to}}
                        {{duration.to}}
                        {{else}}(досі працюємо)
                        {{/if}}
                    </div>

                    <br>
                    {{#if company.url}}
                    <div>{{>link text=company.name href=company.url blank=true noline=true}}</div>
                    {{else}}
                    <b>{{company.name}}</b>
                    {{/if}}
                    <br>
                    <br>
                    <div>
                        <strong>Projects ({{projectAmount}})</strong>
                    </div>

                    <br>

                    <ul>
                        {{#each projects}}

                        <div>{{>link text=name href=url blank=true noline=true}}</div>
                        <br>

                        <div>
                            <p>{{about}}</p>
                        </div>
                        <br>
                        <div>
                            <em> Project stacks({{stackAmount}})</em>
                        </div>

                        <br>
                        <div>
                            <ul>
                                {{#each stacks}}
                                <li>{{name}}</li>
                                {{/each}}
                            </ul>
                        </div>
                        <br>
                        <div>
                            <em>Project awards({{awardsAmount}})</em>
                        </div>
                        <br>
                        <div>
                            <ul>
                                {{#each awards}}
                                <li>{{name}}</li>
                                {{/each}}
                            </ul>
                        </div>
                        {{/each}}
                    </ul>
                    </li>
                    <br>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>