{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{>title big=true data="My educations"}}
            <ul>
                {{#each educations }}
                <li>
                    {{name}}

                    {{#if isEnd}}(end){{/if}}

                    {{#unless isEnd}}(ще в процессі){{/unless}}


                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{>title big=false data="My certificates"}}
            <ul>
                {{#each certificates }}
                <li>
                    {{name}} ({{id}})
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>

